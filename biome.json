{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [".vscode", ".next", "node_modules"]
	},
	"formatter": {
		"indentStyle": "tab"
	},
	"javascript": { "formatter": { "semicolons": "asNeeded" } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noConsoleLog": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn"
			}
		}
	}
}
